{
  "name": "spech",
  "version": "0.1.0",
  "description": "Check your text for grammar and spelling error using multiple providers",
  "bin": "src/index.js",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js 'README.md'",
    "test": "humile",
    "test:full": "npm run test && npm run lint && npm run spell",
    "lint": "eslint 'src/**/*.js'",
    "spell": "src/index.js 'README.md'",
    "postversion": "git push && git push --tags",
    "preversion": "npm run test:full",
    "prepack": "npm run test:full"
  },
  "typings": "src/index.d.ts",
  "repository": "megahertz/spech",
  "files": [
    "src/*",
    "!__specs__"
  ],
  "keywords": [
    "spell checker",
    "grammar checker",
    "hunspell",
    "GrammarBot"
  ],
  "author": "Alexey Prokhorov",
  "license": "MIT",
  "bugs": "https://github.com/megahertz/spech/issues",
  "homepage": "https://github.com/megahertz/spech#readme",
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "humile": "^0.2.16"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "hunspell-asm": "^4.0.1",
    "package-options": "0.0.7"
  }
}
